{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "indent": ["error", 2, { "ignoredNodes": ["TemplateLiteral *"] }],
    "prefer-arrow-callback": "off",
    "no-underscore-dangle": ["error", { "allow": ["__WB_MANIFEST"] }],
    "linebreak-style": ["off"],
    "import/no-extraneous-dependencies": ["off"]
  }
}
